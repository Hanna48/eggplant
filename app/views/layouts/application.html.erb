<!DOCTYPE html>
<html>
  <head>
    <title>茄子切貨網</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>

    <div class="overlay"></div>

    <!-- banner -->
    <nav class="navbar navbar-default navbar-expand-lg" style="background:#fff;">

      <div class="container-fluid">
        
        <!-- Brand and toggle get grouped for better mobile display -->
        <%= link_to root_path, class: "navbar-brand" do %>
          <div class="clearfix inline-block">
            <%= image_tag "logo", size: "120x37" %>
          </div>
        <% end %>

        <% if current_user %>

          <ul class="nav navbar-nav navbar-left">

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">MAN</a>
                <ul class="dropdown-menu">
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">WOMAN</a>
                <ul class="dropdown-menu">
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">KIDS</a>
                <ul class="dropdown-menu">
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">BABY</a>
                <ul class="dropdown-menu">
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                    <li><a href="#">123</a></li>
                </ul>
            </li>

          </ul>
        <% end %>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <ul class="pull-right text-right nav navbar-nav">
          <% if current_user %>
            <% if current_user.admin? %>
              <li><%= link_to 'Admin back', ajion2596dhi_root_path %></li>
            <% end %>

            <li><%= link_to('log out', destroy_user_session_path, method: :delete) %></li>

            <li>
              <%= link_to root_path do %>
                <span id="search-icon" class="glyphicon glyphicon-search"></span>
              <% end %>
            </li>
            
            <li>
              <%= link_to root_path do %>
                <%= image_tag "cart", size: "15x15"%>
              <% end %>
            </li>

            <li>
              <%= link_to root_path do %>
                <%= image_tag "member", size: "15x15"%>
              <% end %>
            </li>

          <% else %>
            <li><%= link_to('registrate', new_user_registration_path)%></li>
            <li><%= link_to('log in', new_user_session_path) %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    

    <% if flash[:notice] %>
    <div class="container">
      <div class="row">
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </div>
      </div>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="container">
      <div class="row">
        <div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= alert %>
        </div>
      </div>
    </div>
    <% end %>
    
    <% if current_user %>
      <div class="phone-head container-fluid clearfix">
        <div class="row">
          <div id="custom-search-input">
            <br>

            <div class="input-group">
              <input type="text" class="form-control input-lg" placeholder="Search" />
              <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="button">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </span>
            </div>

          </div>
        </div>

      <!--Nav-->
        <div class="phone-nav clearfix">
          <div class="row">

          <ul class="nav nav-justified" role="tablist">
            <li role="presentation"><a href="#">HOME</a></li>
            <li role="presentation"><a href="#">MEN</a></li>
            <li role="presentation"><a href="#">WOMEN</a></li>
            <li role="presentation"><a href="#">KIDS</a></li>
            <li role="presentation"><a href="#">BABY</a></li>
          </ul>

          </div>
        </div>
        
      </div>
    <% end %>

    <%= yield %>

    <br>
    
    <% if current_user %>
      <footer class="page-footer font-small">
        <!-- Contact -->
        <section>
          <p style="text-align:center">
              <a href="#"><span class="footer">關於品牌</span></a>
              <a href="#"><span class="footer">聯絡我們</span></a>
              <a href="#"><span class="footer">購物須知</span></a>

              <br><br>
              <span class="copyright">2018 &copy; EGGPLANT ALL RIGHTS RESERVED</span>
          </p>
        </section>
      </footer>
    
      <div class="phone-fix fixed">
        <div class="container-fluid">
          <div class="row">

            <ul class="nav nav-justified" role="tablist">

              <li role="presentation">
                <%= link_to root_path do %>
                  <% if @page_tab == "index" %>
                    <%= image_tag "index-click.png", width: "50px" %>
                  <% else %>
                    <%= image_tag "index.png", width: "30px" %>
                  <% end %>
                <% end %>
              </li>

              <li role="presentation">
                <%= link_to root_path do %>
                  <% if @page_tab == "category" %>
                    <%= image_tag "category-click.png", width: "50px" %>
                  <% else %>
                    <%= image_tag "category.png", width: "30px" %>
                  <% end %>
                <% end %>
              </li>

              <li role="presentation">
                <%= link_to root_path do %>
                  <% if @page_tab == "cart" %>
                    <%= image_tag "cart-click.png", width: "50px" %>
                  <% else %>
                    <%= image_tag "cart.png", width: "30px" %>
                  <% end %>
                <% end %>
              </li>

              <li role="presentation">
                <%= link_to root_path do %>
                  <% if @page_tab == "member" %>
                    <%= image_tag "member-click.png", width: "50px" %>
                  <% else %>
                    <%= image_tag "member.png", width: "30px" %>
                  <% end %>
                <% end %>
              </li>

            </ul>

          </div>
        </div>
      </div>
    <% end %>

  </body>
</html>
