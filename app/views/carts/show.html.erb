<% @items.each do |item| %>
  <%= image_tag item.product.main_image, width: "60px" %><br>
  <%= item.product.name %><br>
  <%= item.product.price %><br>
  <%= item.quantity %><br>
<% end %>

<%= form_for @order do |f| %>
  <section class="panel">
    <h2>Shpping Information</h2>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
  </section>

  <%= f.submit "CHECKOUT", class: "btn" %>

<% end %>